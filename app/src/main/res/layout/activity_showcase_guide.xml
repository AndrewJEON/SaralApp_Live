<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/home"
            android:padding="10dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_drawer"
            android:padding="10dp"
            android:gravity="center_vertical"

            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/ivv"
        android:layout_below="@+id/parent1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/s6"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"

        />

<LinearLayout
    android:id="@+id/parent1"
    android:background="#fff"
    android:orientation="horizontal"
    android:layout_below="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@drawable/home_green"
        android:text="Discover"
        android:paddingBottom="5dp"
        android:textSize="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
         />
    <Button
        android:id="@+id/you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@drawable/you_green"
        android:text="You"
        android:paddingBottom="5dp"
        android:textSize="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@drawable/chat_green"
        android:text="Chat"
        android:paddingBottom="5dp"
        android:textSize="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@drawable/ic_invite_g"
        android:text="Invite"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:layout_weight="1"
        />

</LinearLayout>
    <ImageView
        android:id="@+id/ivvtab"
        android:layout_below="@+id/parent1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/s6"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        />
    <ImageButton
        android:id="@+id/btnfloat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        style="@style/FloatingActionButton"
        android:src="@drawable/fab_add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text=""
        android:visibility="gone"
        android:layout_marginTop="-150dp"
        android:padding="10dp"
        android:gravity="center_vertical"

        />
</RelativeLayout>



