<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/background">


        <RelativeLayout
            android:id="@+id/favoiriterelativelayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" >

            <TextView
                android:id="@+id/tv_postheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="2dp"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingTop="2dp"
                android:text="Study Room Vastu Tips"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="@color/Black"/>
            <LinearLayout
                android:id="@+id/mediaLayout"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_below="@+id/tv_postheader">

                <ImageView
                    android:id="@+id/img_postimage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:src="@drawable/splash"
                    android:scaleType="fitXY"
                    android:visibility="gone" />
                <WebView
                    android:id="@+id/vid_postvideo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_postmassege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mediaLayout"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="2dp"
                android:padding="0dp"
                android:autoLink="all"
                android:text="Saral Vaastu helps to enhance our Body’s Positive Energy Source, through the driving away of our body’s Negative Energy Source"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textColor" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_postmassege">
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/tv_posttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="2dp"
                android:text=" "
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/Textcolor_lightblue" />

            <RelativeLayout
                android:id="@+id/like_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_postmassege"
                android:paddingTop="5dp"
                >

                <RelativeLayout
                    android:id="@+id/container2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/view1"
                    android:padding="0dp"
                    >
                    <RelativeLayout
                        android:id="@+id/container23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:gravity="center_vertical"
                        >

                    <ImageButton
                        android:id="@+id/iv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_like_grey"
                        android:layout_centerVertical="true"
                        />

                  </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                         android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/container23"
                        android:text="45"
                        android:textColor="@color/textColor_black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    />

                <RelativeLayout
                    android:id="@+id/container3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view1"
                    android:padding="5dp"

                    >

                    <ImageButton
                        android:id="@+id/iv_dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_dislike_grey"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/tv_dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"

                        android:layout_toRightOf="@+id/iv_dislike"
                        android:text="23"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout android:orientation="vertical" android:layout_alignParentBottom="true" android:id="@+id/ll_main" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dp">

        <View android:id="@+id/list_item_seperator" android:background="@color/header_bg_color" android:layout_width="fill_parent" android:layout_height="2dp" />
        <View android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="@dimen/list_divider_height" />
    </LinearLayout>
</RelativeLayout>