<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    tools:context="com.cgp.saral.fragments.LoginFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/from_right"
        android:layout_marginRight="@dimen/from_right"
        android:src="@drawable/ic_logo"

        android:id="@+id/ddds"
        />
    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/from_right"
        android:layout_marginRight="@dimen/from_right"
        >

        <ImageButton
            android:id="@+id/login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            />


        <ImageButton
            android:id="@+id/login_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"
            android:layout_below="@+id/login_facebook"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


        <RelativeLayout
            android:id="@+id/orviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/login_google"
            >
            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="OR"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_toRightOf="@+id/or"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="#000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_toLeftOf="@+id/or"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="#000"/>

      </RelativeLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_socialotherlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orviews"
            android:layout_marginTop="@dimen/top"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_backgroundstate"
            android:paddingLeft="@dimen/btn_paddingLeft"
            android:paddingRight="@dimen/btn_paddingRight"
            android:paddingTop="@dimen/btn_paddingTop"
            android:alpha="0.80"
            android:paddingBottom="@dimen/btn_paddingTop"
            android:layout_marginBottom="@dimen/from_right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LOGIN"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
