<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/form_background"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/trans_tool"
        layout="@layout/toolbar_transparent" />

    <RelativeLayout
        android:id="@+id/parent_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_userpro"
        android:layout_marginBottom="@dimen/profileright"
        android:layout_marginLeft="@dimen/profileright"
        android:layout_marginRight="@dimen/profileright"
        android:layout_marginTop="20dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- name Label -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_name"
                    android:layout_gravity="center"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_usernameE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_username1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:hint="Name*"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textColor="#424242"
                        android:focusable="false"/>


                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_call"
                    android:layout_gravity="center"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_regsecMobileE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabel" >

                    <EditText
                        android:id="@+id/et_regsecMobile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:hint="Preferred Mobile Number*"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="#424242" />

                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icpincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_action_forum_pin_icon"
                        android:layout_gravity="center"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tv_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:theme="@style/TextLabel" >

                        <EditText
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:hint="Pin Code*"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="#424242" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_dob"
                    android:layout_gravity="center"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_preferredDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/home_selctor"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_dob1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Preferred Date*"
                        android:inputType="date" />

                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ictime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_action_clock148"
                    android:layout_gravity="center"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/home_selctor"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Preferred Time*"
                        android:inputType="time" />

                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tv_termcondition_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/tv_termcondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:button="@drawable/termand_condselector"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/termandcond"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/edittext" />
                </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/helplineavailability"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top"
                    android:alpha="0.80"
                    android:background="@drawable/btn_backgroundstate"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:text="SUBMIT"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serviceIdMessage"/>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>