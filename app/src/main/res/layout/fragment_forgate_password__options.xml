<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.cgp.saral.fragments.ForgotPassword_Options">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/from_right"
    android:layout_marginRight="@dimen/from_right"    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive new password"
        android:layout_marginBottom="@dimen/TopMargin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Black"
        android:layout_above="@+id/for_parent"
        />
    <RelativeLayout
        android:id="@+id/for_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_above="@+id/orviews1"
        android:layout_marginBottom="@dimen/TopMargin"
        >

<ImageView
    android:id="@+id/iv_bysms"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_sms"
    android:layout_centerHorizontal="true"

    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to receive through sms"
            android:textColor="@color/Black"
            android:layout_marginTop="@dimen/from_right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_bysms"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/orviews1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        >
        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"
            android:text="... With Love by, Saral Vaastu Team  ..."
            />
       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@+id/or"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toLeftOf="@+id/or"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="#000"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/for_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orviews1"
        android:layout_marginTop="@dimen/TopMargin"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_bymail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to receive through email"
            android:layout_marginTop="@dimen/from_right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_bymail"
            />

    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>