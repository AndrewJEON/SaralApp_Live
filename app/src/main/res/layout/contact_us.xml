<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact"
    android:orientation="vertical"
    android:padding="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#70707005"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:layout_above="@+id/child">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saral Vaastu Branches"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>
    <ListView
        android:id="@+id/contactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="vertical">
    </ListView>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/child_inner13"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:gravity="left">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_call_blue" />

        <TextView
            android:id="@+id/tvCorpPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv3"
            android:text="@string/cgp_contact"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorLink="#000"
            android:textStyle="bold"
            android:autoLink="all"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/child_inner13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/iv13"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email_blue" />

        <TextView
            android:id="@+id/tvCorpEmail"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv13"
            android:text="@string/app_email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorLink="#000"
            android:textStyle="bold"
            android:autoLink="all"/>


    </RelativeLayout>


</RelativeLayout>